# install Blender

blenderMajor=3.2
blenderMinor=1
blenderVersion=${blenderMajor}.${blenderMinor}-linux-x64
blender=https://mirrors.dotsrc.org/blender/release/Blender${blenderMajor}/blender-${blenderVersion}.tar.xz

cd /tmp
wget ${blender}
cd /
tar xfJ /tmp/blender-${blenderVersion}.tar.xz
rm -f /tmp/${blender}

